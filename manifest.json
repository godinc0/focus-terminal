{
  "manifest_version": 3,
  "name": "Focus Terminal",
  "version": "2.0.0",
  "description": "Terminal-based website blocking system",
  "icons": {
    "16": "public/images/logo.png",
    "48": "public/images/logo.png",
    "128": "public/images/logo.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "public/images/logo.png",
      "48": "public/images/logo.png",
      "128": "public/images/logo.png"
    },
    "default_title": "Focus Terminal"
  },
  "options_ui": {
    "page": "src/interface/dashboard.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/pages/interceptor.html"
      ],
      "use_dynamic_url": false
    }
  ]
}